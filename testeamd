<body>
  <canvas id="moon"></canvas>
  <div id="content">
    <p id="fixedText">Para Amanda Elpidio</p>
    <h1 id="title"></h1>
    <button id="repeatButton">Repetir Anima√ß√£o</button>
  </div>

  <script>
    const canvas = document.getElementById('moon');
    const ctx = canvas.getContext('2d');
    let moonImage = new Image();
    moonImage.src = 'https://mfiles.alphacoders.com/999/999881.jpg';

    function setCanvasSize() {
      canvas.width = window.innerWidth;
      canvas.height = window.innerHeight;
    }

    window.addEventListener('resize', setCanvasSize);
    setCanvasSize();

    function drawMoon() {
      ctx.clearRect(0, 0, canvas.width, canvas.height);
      ctx.drawImage(moonImage, 0, 0, canvas.width, canvas.height);
    }

    moonImage.onload = () => {
      drawMoon();
    };

    const title = document.getElementById('title');
    const text = 'Obrigado por n√£o desistir de mim e continuar aqui mesmo comigo sendo √†s vezes chato ‚ù§Ô∏è';
    let index = 0;

    function typeText() {
      title.textContent = text.slice(0, index);
      index++;

      if (index <= text.length) {
        setTimeout(typeText, 100);
      } else {
        document.getElementById('repeatButton').style.display = 'inline';
      }
    }

    typeText();

    const repeatButton = document.getElementById('repeatButton');
    repeatButton.addEventListener('click', () => {
      index = 0;
      typeText();
      repeatButton.style.display = 'none';
    });

    canvas.addEventListener('contextmenu', (event) => {
      event.preventDefault();
    });
  </script>
</body>
